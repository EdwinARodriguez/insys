{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div style="margin-top: 70px;"></div>
        <nav class="navbar" style="background-color: #cfd8dc;">
            <span class="navbar-brand mb-0 h1">SKILLS</span>
            <div class="float-right">
                <a href="{{ path('insertar_campoafin') }}" class="btn btn-success" style="color: #FFFFFF; text-decoration: none" >Add</a>
            </div>
        </nav>
        <table class="table table-striped table-bordered">
            <thead class="thead" style="background-color: #81c784;">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
                {% for campoafin in lista_datos %}
                <tr>
                    <td>{{ campoafin.id }}</td>
                    <td>{{ campoafin.nombre }}</td>
                    <td>
                         <div class="btn-group">
                            <label class="btn btn-outline-info btn-sm">
                                <a href="{{ path('editar_campoafin',{id:campoafin.id }) }}" style="color: #000000; text-decoration: none" >Edit</a>
                            </label>
                            <label class="btn btn-outline-danger btn-sm">
                                <a href="{{ path('eliminar_campoafin', {id:campoafin.id}) }}" style="color: #000000; text-decoration: none">Delete</a>
                            </label>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
