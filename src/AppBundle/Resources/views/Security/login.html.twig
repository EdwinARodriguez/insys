{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">

        {% if error %}
            <div class="alert alert-danger" role="alert">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <div class="card">
            <h5 class="card-header">Login</h5>
            <div class="card-body">
                <div class="row">
                    <div class="col"></div>
                    <div class="col-6">
                        <form action="{{ path('login') }}" method="post">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email</label>
                                <input type="email" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="Enter Email">

                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Password</label>
                                <input type="password" class="form-control" id="password" name="_password" placeholder="Enter Password">
                            </div>
                            <div>
                                <a href="###">Forgot password?</a>
                            </div>

                            <div class="float-right">
                                <button type="" class="btn btn-primary">Sign up</button>
                                <button type="submit" class="btn btn-success">Sign in</button>
                            </div>

                        </form>
                    </div>
                    <div class="col"></div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}

